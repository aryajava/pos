<% if (success_messages.length> 0) { %>
  <% success_messages.forEach(function(message) { %>
    <div id="success-alert" class="alert alert-success alert-dismissible fs-6 fade show" role="alert">
      <%= message %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <% }) %>
      <% } %>

        <% if (error_messages.length> 0) { %>
          <% error_messages.forEach(function(message) { %>
            <div id="error-alert" class="alert alert-danger alert-dismissible fs-6 fade show" role="alert">
              <%= message %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <% }) %>
              <% } %>